<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Ders Adı -->
        <TextView
            android:id="@+id/textViewSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matematik"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Net Bilgileri Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <!-- Soru Sayısı -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewSoruSayisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soru: 20"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Doğru Sayısı -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewDogruSayisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doğru: 15"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Yanlış Sayısı -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewYanlisSayisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yanlış: 3"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Boş Sayısı -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewBosSayisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boş: 2"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Net Sayısı -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewNetSayisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Net: 14"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 